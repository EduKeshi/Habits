// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid()) // "uuid" é uma string com caracteres únicos
  title      String
  created_at DateTime

  @@map("habits") // Esse vai ser o nome da tabela
}
